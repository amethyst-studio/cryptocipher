{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/",
    "types": [
      "node",
      "chai",
      "mocha"
    ],
    "alwaysStrict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "./**/**.ts",
    "./**/*.js",
    "./**/**.js"
  ]
}
