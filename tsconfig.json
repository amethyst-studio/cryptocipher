{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
    "types": ["node", "chai", "mocha"],
    "outDir": "./dist/",
    "declaration": true,
    "allowUnusedLabels": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    ".vscode",
    ".yarn",
    "build",
    "dist",
    "tests"
  ]
}
