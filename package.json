{
  "name": "cryptocipher",
  "description": "Node.js crypto implementation powered by TypeScript!",
  "version": "3.0.2",
  "license": "MIT",
  "author": "Samuel Voeller <samuel.voeller@amethyst.live>",
  "contributors": [
    "Amethyst Studio <authority@amethyst.live>"
  ],
  "homepage": "https://github.com/amethyst-studio/cryptocipher.git",
  "repository": {
    "url": "git@github.com:amethyst-studio/cryptocipher.git"
  },
  "main": "./dist/driver.js",
  "types": "./dist/driver.d.ts",
  "files": [
    "./dist/",
    "./package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8.17.0",
    "npm": "use-yarn",
    "yarn": ">=1.22.4"
  },
  "engineStrict": true,
  "scripts": {
    "initialize": "cd build && bash initialize.sh",
    "upgrade": "cd build && bash upgrade.sh",
    "lint-only": "yarn eslint --ext ./src/**/*.ts --ext ./src/*.ts",
    "lint": "yarn eslint --fix --ext ./src/**/*.ts --ext ./src/*.ts",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' yarn mocha -r ts-node/register './tests/**/*.ts'",
    "coverage": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' yarn nyc mocha -r ts-node/register './tests/**/*.ts'",
    "build": "yarn tsc --build --clean && yarn tsc --build",
    "prepare": "yarn test && yarn build",
    "prepublishOnly": "yarn test && yarn build"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn build",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@yarnpkg/pnpify": "^2.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-tsdoc": "^0.2.7",
    "husky": "^4.3.0",
    "mocha": "^8.2.1",
    "node-preload": "^0.2.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "resolutions": {
    "node-preload": "0.2.0",
    "typescript": "latest"
  },
  "root": true
}
